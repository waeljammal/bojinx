<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

	<id>release</id>

	<formats>
		<format>zip</format>
	</formats>

	<includeBaseDirectory>false</includeBaseDirectory>

	<fileSets>
		<fileSet>
			<directory>src/site/resources</directory>
			<outputDirectory></outputDirectory>
		</fileSet>
		<fileSet>
			<directory>src/target/site</directory>
			<outputDirectory></outputDirectory>
		</fileSet>
	</fileSets>

	<!-- Single target sets for better control over output -->
	<moduleSets>
		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>com.bojinx:bojinx-core</include>
			</includes>
			<binaries>
				<outputDirectory>core</outputDirectory>
				<unpack>false</unpack>
				<includeDependencies>false</includeDependencies>
			</binaries>
			<sources>
				<fileSets>
					<fileSet>
						<directory>target/site/asdoc</directory>
						<outputDirectory>../core/docs</outputDirectory>
					</fileSet>
				</fileSets>
			</sources>
		</moduleSet>
		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>com.bojinx:bojinx-processor-injection</include>
			</includes>
			<binaries>
				<outputDirectory>processors</outputDirectory>
				<unpack>false</unpack>
				<includeDependencies>false</includeDependencies>
			</binaries>
			<sources>
				<fileSets>
					<fileSet>
						<directory>target/site/asdoc</directory>
						<outputDirectory>../processors/docs/bojinx-processor-injection
						</outputDirectory>
					</fileSet>
				</fileSets>
			</sources>
		</moduleSet>
		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>com.bojinx:bojinx-processor-display-scanning</include>
			</includes>
			<binaries>
				<outputDirectory>processors</outputDirectory>
				<unpack>false</unpack>
				<includeDependencies>false</includeDependencies>
			</binaries>
			<sources>
				<fileSets>
					<fileSet>
						<directory>target/site/asdoc</directory>
						<outputDirectory>../processors/docs/bojinx-processor-display-scanning
						</outputDirectory>
					</fileSet>
				</fileSets>
			</sources>
		</moduleSet>
		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>com.bojinx:bojinx-processor-starling</include>
			</includes>
			<binaries>
				<outputDirectory>processors</outputDirectory>
				<unpack>false</unpack>
				<includeDependencies>false</includeDependencies>
			</binaries>
			<sources>
				<fileSets>
					<fileSet>
						<directory>target/site/asdoc</directory>
						<outputDirectory>../processors/docs/bojinx-processor-starling
						</outputDirectory>
					</fileSet>
				</fileSets>
			</sources>
		</moduleSet>
		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>com.bojinx:bojinx-processor-messaging</include>
			</includes>
			<binaries>
				<outputDirectory>processors</outputDirectory>
				<unpack>false</unpack>
				<includeDependencies>false</includeDependencies>
			</binaries>
			<sources>
				<fileSets>
					<fileSet>
						<directory>target/site/asdoc</directory>
						<outputDirectory>../processors/docs/bojinx-processor-messaging
						</outputDirectory>
					</fileSet>
				</fileSets>
			</sources>
		</moduleSet>
		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>com.bojinx:bojinx-processor-mnav</include>
			</includes>
			<binaries>
				<outputDirectory>processors</outputDirectory>
				<unpack>false</unpack>
				<includeDependencies>false</includeDependencies>
			</binaries>
			<sources>
				<fileSets>
					<fileSet>
						<directory>target/site/asdoc</directory>
						<outputDirectory>../processors/docs/bojinx-processor-mnav
						</outputDirectory>
					</fileSet>
				</fileSets>
			</sources>
		</moduleSet>
		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>com.bojinx:bojinx-processor-command</include>
			</includes>
			<binaries>
				<outputDirectory>processors</outputDirectory>
				<unpack>false</unpack>
				<includeDependencies>false</includeDependencies>
			</binaries>
			<sources>
				<fileSets>
					<fileSet>
						<directory>target/site/asdoc</directory>
						<outputDirectory>../processors/docs/bojinx-processor-command
						</outputDirectory>
					</fileSet>
				</fileSets>
			</sources>
		</moduleSet>
		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>com.bojinx:bojinx-extension-logging</include>
			</includes>
			<binaries>
				<outputDirectory>extensions</outputDirectory>
				<unpack>false</unpack>
				<includeDependencies>false</includeDependencies>
			</binaries>
			<sources>
				<fileSets>
					<fileSet>
						<directory>target/site/asdoc</directory>
						<outputDirectory>../utilities/docs/bojinx-extension-logging</outputDirectory>
					</fileSet>
				</fileSets>
			</sources>
		</moduleSet>
		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>com.bojinx:bojinx-utility-tasks</include>
			</includes>
			<binaries>
				<outputDirectory>utilities</outputDirectory>
				<unpack>false</unpack>
				<includeDependencies>false</includeDependencies>
			</binaries>
			<sources>
				<fileSets>
					<fileSet>
						<directory>target/site/asdoc</directory>
						<outputDirectory>../utilities/docs/bojinx-utility-tasks</outputDirectory>
					</fileSet>
				</fileSets>
			</sources>
		</moduleSet>
		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>com.bojinx:bojinx-utility-test</include>
			</includes>
			<binaries>
				<outputDirectory>utilities</outputDirectory>
				<unpack>false</unpack>
				<includeDependencies>false</includeDependencies>
			</binaries>
			<sources>
				<fileSets>
					<fileSet>
						<directory>target/site/asdoc</directory>
						<outputDirectory>../utilities/docs/bojinx-utility-test</outputDirectory>
					</fileSet>
				</fileSets>
			</sources>
		</moduleSet>
		
		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>com.bojinx:bojinx-utility-dialog</include>
			</includes>
			<binaries>
				<outputDirectory>legacy</outputDirectory>
				<unpack>false</unpack>
				<includeDependencies>false</includeDependencies>
			</binaries>
			<sources>
				<fileSets>
					<fileSet>
						<directory>target/site/asdoc</directory>
						<outputDirectory>../utilities/docs/bojinx-utility-dialog</outputDirectory>
					</fileSet>
				</fileSets>
			</sources>
		</moduleSet>
		
		<!-- Combine -->
		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>com.bojinx:bojinx-as3-framework</include>
			</includes>
			<binaries>
				<outputDirectory>site</outputDirectory>
				<unpack>false</unpack>
				<includeDependencies>false</includeDependencies>
			</binaries>
			<sources>
				<fileSets>
					<fileSet>
						<directory>target/site/</directory>
						<outputDirectory>../site</outputDirectory>
					</fileSet>
				</fileSets>
			</sources>
		</moduleSet>
	</moduleSets>
</assembly>